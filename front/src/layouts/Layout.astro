---
export interface Props {
  title: string;
  url: string;
  metaImage: string;
}

const { title, url } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-br" class="scroll-smooth" data-theme="buziness">
  <head>
    <!--     <title>infinity </title>
 -->
    <title>infinity - {title}</title>
    <meta name="title" content="infinity - {title}" />
    <meta
      name="description"
      content="infinity"
    />
    <meta
      name="keywords"
      content="infinity"
    />
    <meta name="robots" content="/robots.txt" />
    <meta name="revisit-after" content="1 day" />
    <meta name="language" content="Portuguese" />
    <meta name="generator" content="N/A" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:url" content="https://infinity.com.br/{url}" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="infinity - {title}" />
    <meta
      property="og:description"
      content="Desenvolvimento de sistemas e sites personalizados desde 2015. Soluções inovadoras para atender às suas necessidades. Conheça nosso portfólio!"
    />
    <meta property="og:image" content="{metaImage}" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="shortcut icon" href="/static/logo/logo/logo.png" />
    <link
      rel="apple-touch-icon"
      href="/static/logo/infinity-icon-iphone-60x60.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="60x60"
      href="/static/logo/infinity-icon-ipad-76x76.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="114x114"
      href="/static/logo/infinity-icon-iphone-retina-120x120.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="144x144"
      href="/static/logo/infinity-icon-ipad-retina-152x152.png"
    />
    <link rel="manifest" href="../../manifest.json" />
    <meta name="theme-color" content="#2196F3" />

    <meta http-equiv="Cache-Control" content="public, max-age=31536000">


  </head>

  <body
    class="bg-gray-900 text-gray-100 px-0 "
  >
    <section id="header">
      <header>
        <div
          class=" flex flex-wrap sm:justify-center md:justify-between px-6 header mx-0 md:mx-8"
        >
          <nav class="navbar mt-20">
            <div class="navbar-start">
              <div class="dropdown">
                <label tabindex="0" class="btn btn-ghost lg:hidden">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M4 6h16M4 12h8m-8 6h16"></path>
                  </svg>
                </label>
                <ul
                  tabindex="0"
                  class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52"
                >
                  <li><a href="/#header"> Home</a></li>
                <li><a href="/#servicos"> Serviços/Produtos</a></li>

                <li><a href="/#clientes"> Clientes</a></li>
                                <li><a href="/#portfolio"> Portfólio</a></li>

                <li>
                  <a href="/#quemsomos"> Quem somos</a>
                </li>
                <li>
                 <a href="/#quemsomos"> Contato</a>
                </li>
                </ul>
              </div>
              <div class="btn btn-ghost normal-case text-4xl">
                <img
                  width="25"
                  height="25"
                  class="mr-2"
                  src="/static/logo/logo.png"
                  alt="Logo da infinity!"
                />
                Infinity
              </div>
            </div>
            <div class="navbar-center hidden lg:flex">
              
            </div>
            <div class="navbar-end hidden lg:flex">
             <ul class="menu menu-horizontal px-1">
                <li><a href="/#header"> Home</a></li>
                <li><a href="/#servicos"> Serviços/Produtos</a></li>

                <li><a href="/#clientes"> Clientes</a></li>
                                <li><a href="/#portfolio"> Portfólio</a></li>

                <li>
                  <a href="/#quemsomos"> Quem somos</a>
                </li>
                <li>
                 <a href="/#contato"> Contato</a>
                </li>

              </ul>
            </div>
          </nav>
          <div
            class="w-full sm:w-full md:w-auto lg:auto text-center md:text-left"
          >
          </div>
        </div>
      </header>
    </section>

  
    <slot />
  </body>

  <script src="../assets/scripts//main.ts"></script>
</html>
